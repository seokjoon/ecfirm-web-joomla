<?xml version="1.0" encoding="utf-8"?>
<form>

	<fieldset name="topicObj"
		addfieldpath="/administrator/components/com_ec/models/fields">
		<field name="objcat" type="objcat" required="" 
			label="COM_ECTOPIC_TOPIC_OBJCAT_LABEL"
			description="COM_ECTOPIC_TOPIC_OBJCAT_DESC" />
	</fieldset>
	
	<fieldset name="topic">
		<field id="title" name="title" type="text" class="inputbox input-xlarge"
			required="true" label="COM_ECTOPIC_TOPIC_TITLE_LABEL" 
			description="COM_ECTOPIC_TOPIC_TITLE_DESC" 
			hint="COM_ECTOPIC_TOPIC_TITLE_DESC" />
		<field id="title" name="title" type="text" class="inputbox input-xlarge"
			required="true" label="COM_ECTOPIC_TOPIC_TITLE_LABEL" 
			description="COM_ECTOPIC_TOPIC_TITLE_DESC" 
			hint="COM_ECTOPIC_TOPIC_TITLE_DESC" />
		<field id="body" name="body" type="textarea" 
			class="inputbox required" filter="safehtml" rows="6" 
			label="COM_ECTOPIC_TOPIC_BODY_LABEL"  
			description="COM_ECTOPIC_TOPIC_BODY_DESC" 
			hint="COM_ECTOPIC_TOPIC_BODY_DESC" />
		<field id="img" name="img" type="file" accept="image/*" onchange="" 
			label="COM_ECTOPIC_TOPIC_IMG_LABEL" 
			description="COM_ECTOPIC_TOPIC_IMG_DESC" />
		<field id="file" name="file" type="file" accept="" onchange=""
			label="COM_ECTOPIC_TOPIC_FILE_LABEL"
			description="COM_ECTOPIC_TOPIC_FILE_DESC" />
		<field id="enable" name="enable" type="radio"  default="1" 
			class="btn-group btn-group-yesno" 
			label="COM_ECTOPIC_TOPIC_ENABLE_LABEL" 
			description="COM_ECTOPIC_TOPIC_ENABLE_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field id="user" name="user" type="hidden" default="0" />
		<field id="topic" name="topic" type="hidden" default="0" />
		<field id="objcat" name="objcat" type="hidden" default="0" />
	</fieldset>
	
	<fieldset name="columns">
		<field id="imgs" name="imgs" type="text" />
		<field id="files" name="files" type="text" />
	</fieldset>
	
</form>