<?xml version="1.0" encoding="utf-8"?>
<form>

	<fieldset name="register">
		<field name="username" type="text" class="validate-username"
			filter="username" required="true" size="30" validate="username" 
			description="COM_ECUSER_REGISTER_USERNAME_DESC" 
			label="COM_ECUSER_REGISTER_USERNAME_LABEL"
			message="COM_ECUSER_REGISTER_USERNAME_MESSAGE" /> 
		<field name="password" type="password" autocomplete="off" size="30"
			class="validate-password" filter="raw" validate="password"
			label="COM_ECUSER_REGISTER_PASSWORD_LABEL" 
			description="COM_ECUSER_REGISTER_PASSWORD_DESC" />
		<field name="email" type="email" class="inputbox" size="40" 
			required="true" filter="string" unique="true" validate="email"
			label="COM_ECUSER_REGISTER_EMAIL_LABEL" 
			description="COM_ECUSER_REGISTER_EMAIL_DESC" />
		<field name="captcha" type="captcha" validate="captcha" 
			label="COM_ECUSER_REGISTER_CAPTCHA_LABEL"
			description="COM_ECUSER_REGISTER_CAPTCHA_DESC" />
		<field id="user" name="user" type="hidden" default="0" />	
	</fieldset>

</form>