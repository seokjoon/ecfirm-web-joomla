<?xml version="1.0" encoding="utf-8"?>
<form>

	<fields name="filter"
		addfieldpath="/administrator/components/com_ectopic/models/fields">
		<field name="search" type="text"
		   hint="COM_ECTOPIC_TOPIC_FILTER_SEARCH_HINT" />
		<field name="order" type="list" onchange="this.form.submit();" default="">
			<option value="">COM_ECTOPIC_TOCPI_ORDER_VALUE_SELECT</option>
			<option value="modified desc">COM_ECTOPIC_TOCPI_ORDER_VALUE_MODIFIED_DESC</option>
			<option value="modified">COM_ECTOPIC_TOCPI_ORDER_VALUE_MODIFIED_ASC</option>
			<option value="created desc">COM_ECTOPIC_TOCPI_ORDER_VALUE_CREATED_DESC</option>
			<option value="created">COM_ECTOPIC_TOCPI_ORDER_VALUE_CREATED_ASC</option>
			<option value="hits desc">COM_ECTOPIC_TOCPI_ORDER_VALUE_HITS_DESC</option>
			<option value="hits">COM_ECTOPIC_TOCPI_ORDER_VALUE_HITS_ASC</option>
		</field>
	</fields>

	<fields name="list">
		<field name="limit" type="limitbox" class="inputbox input-mini"
		   default="20" onchange="this.form.submit();" />
	</fields>

</form>