<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter"
		addfieldpath="/administrator/components/com_ectopic/models/fields">
		<field name="search" type="text"
		   hint="COM_ECTOPIC_TOPIC_FILTER_SEARCH_HINT" />
		<field name="topiccat" type="topiccat" onchange="this.form.submit();" />
		<field name="order" type="order" onchange="this.form.submit();" />
	</fields>

	<fields name="list">
		<field name="limit" type="limitbox" class="inputbox input-mini"
		   default="20" onchange="this.form.submit();" />
	</fields>

</form>