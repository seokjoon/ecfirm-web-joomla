<?xml version="1.0" encoding="utf-8"?>
<extension version="3.6" type="module" client="site" method="upgrade">
    <name>ECFIRM GitHub Module</name>
    <author>Seok Joon Lee</author>
    <authorEmail>seokjoon@kilmeny.net</authorEmail>
    <authorUrl>http://ecfirm.net/</authorUrl>
    <copyright>Copyright (C) ecfirm.net. All rights reserved.</copyright>
    <license>License GNU General Public License version 2 or later</license>
    <version>3.6.2</version>
    <description>MOD_ECGITHUB_XML_DESCRIPTION</description>



    <files>
        <folder>tmpl</folder>
        <filename module="mod_ecgithub">mod_ecgithub.php</filename>
        <filename>helper.php</filename>
        <filename>mod_ecgithub.xml</filename>
        <filename>index.html</filename>
    </files>



    <languages>
        <language tag="ko-KR">ko-KR.mod_ecgithub.ini</language>
        <language tag="ko-KR">ko-KR.mod_ecgithub.sys.ini</language>
    </languages>



    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="layout" type="modulelayout" 
                	label="JFIELD_ALT_LAYOUT_LABEL" 
                	description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
        		<field name="cache" type="list" default="1" 
        			label="COM_MODULES_FIELD_CACHING_LABEL" 
        			description="COM_MODULES_FIELD_CACHING_DESC"> 
		        	<option value="1">JGLOBAL_USE_GLOBAL</option>
        			<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
        		</field>
        		<field name="cache_time" type="text" default="900" 
        			label="COM_MODULES_FIELD_CACHE_TIME_LABEL" 
        			description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
            </fieldset>
            <fieldset name="github">
            	<field name="username" type="text" label="" description="" />
            	<field name="password" type="password" label="" description="" />
            	<field name="repository" type="text" label="" description="" />
        		<field name="cache_local" type="list" default="1" 
        			label="MOD_ECGITHUB_EVENTS_FIELD_CACHE_LOCAL_LABEL" 
        			description="MOD_ECGITHUB_EVENTS_FIELD_CACHE_LOCAL_DESC"> 
		        	<option value="1">COM_MODULES_FIELD_CACHING_LABEL</option>
        			<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
        		</field>
        		<field name="cache_time_local" type="text" default="14400" 
        			label="MOD_ECGITHUB_EVENTS_FIELD_CACHE_TIME_LOCAL_LABEL" 
        			description="MOD_ECGITHUB_EVENTS_FIELD_CACHE_TIME_LOCAL_DESC" />
            	<field name="length_list" type="text" default="10"
            		label="" description="" />
            	<field name="length_item" type="text" default="30"
            		label="" description="" />
            </fieldset>
        </fields>
    </config>

</extension>