<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="prodObj"
		addfieldpath="/administrator/components/com_ec/models/fields">
		<field name="objtype" type="objtype" required="true" 
			label="COM_ECPROD_PROD_OBJTYPE_LABEL"
			description="COM_ECPROD_PROD_OBJTYPE_DESC" />
		<field name="objcat" type="objcat" required="true" 
			label="COM_ECPROD_PROD_OBJCAT_LABEL"
			description="COM_ECPROD_PROD_OBJCAT_DESC" />
	</fieldset>
	<fieldset name="prod">
		<field id="body" name="body" type="textarea" class="inputbox required"
			filter="safehtml" label="COM_ECPROD_PROD_BODY_LABEL"  
			description="COM_ECPROD_PROD_BODY_DESC" rows="4" />
		<field id="user" name="user" type="hidden" default="0" />
		<field id="prod" name="prod" type="hidden" default="0" />
	</fieldset>
	<fieldset name="img">
		<field id="img" name="img" type="file" label="label" description="desc" 
			accept="image/*" onchange="prod_saveImg" />
		<field name="imgList" type="imagelist" directory="/images" hide_none="1" 
			label="COM_ECPROD_PROD_IMGLIST_LABEL"
			description="COM_ECPROD_PROD_IMGLIST_DESC" />
		<field name="imgBg" type="media" directory="" 
			label="COM_ECPROD_PROD_BG_LABEL" 
			description="COM_ECPROD_PROD_BG_DESC" />
		<field id="user" name="user" type="hidden" default="0" />
		<field id="prod" name="prod" type="hidden" default="0" />
	</fieldset>
	<fieldset name="video">
		<field id="video_url" name="video_url" type="url" label="" description="" />
		<field id="user" name="user" type="hidden" default="0" />
		<field id="prod" name="prod" type="hidden" default="0" />
	</fieldset>
</form>