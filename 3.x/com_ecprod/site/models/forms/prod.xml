<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="prod">
		<field id="body" name="body" type="textarea" class="inputbox required"
			filter="safehtml" label="COM_ECPROD_PROD_BODY_LABEL"  
			description="COM_ECPROD_PROD_BODY_DESC" rows="4" />
		<field id="user" name="user" type="hidden" default="0" />
		<field id="prod" name="prod" type="hidden" default="0" />
	</fieldset>
	<fieldset name="img">
		<field id="img" name="img" type="file" label="label" description="desc" 
			accept="image/*" onchange="prod_saveImg" />
		<field id="img_url" name="img_url" type="url" label="" description="" />
		<field id="user" name="user" type="hidden" default="0" />
		<field id="prod" name="prod" type="hidden" default="0" />
	</fieldset>
	<fieldset name="video">
		<field id="video_url" name="video_url" type="url" label="" description="" />
		<field id="user" name="user" type="hidden" default="0" />
		<field id="prod" name="prod" type="hidden" default="0" />
	</fieldset>
</form>