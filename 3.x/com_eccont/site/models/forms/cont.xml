<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="contObj"
		addfieldpath="/administrator/components/com_ec/models/fields">
		<field name="objtype" type="objtype" required="true" 
			label="COM_ECCONT_CONT_OBJTYPE_LABEL"
			description="COM_ECCONT_CONT_OBJTYPE_DESC" />
		<field name="objcat" type="objcat" required="true" 
			label="COM_ECCONT_CONT_OBJCAT_LABEL"
			description="COM_ECCONT_CONT_OBJCAT_DESC" />
	</fieldset>
	<fieldset name="cont">
		<field id="title" name="title" type="text" class="inputbox input-xlarge"
			required="true" label="COM_ECCONT_CONT_TITLE_LABEL" 
			description="COM_ECCONT_CONT_TITLE_DESC" 
			hint="COM_ECCONT_CONT_TITLE_DESC" />
		<field id="body" name="body" type="editor" class="inputbox required"
			filter="safehtml" buttons="false" required="true" 
			label="COM_ECCONT_CONT_BODY_LABEL" 
			description="COM_ECCONT_CONT_BODY_DESC" />
		<field id="img" name="img" type="file" label="label" description="desc" 
			accept="image/*" onchange="cont_saveImg" />
		<field id="file" name="file" type="file" label="label" description="desc" 
			accept="" onchange="cont_saveFile" />
		<field id="enable" name="enable" type="radio"  default="1" 
			class="btn-group btn-group-yesno" 
			label="COM_ECCONT_CONT_ENABLE_LABEL" 
			description="COM_ECCONT_CONT_ENABLE_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field id="user" name="user" type="hidden" default="0" />
		<field id="cont" name="cont" type="hidden" default="0" />
	</fieldset>
</form>