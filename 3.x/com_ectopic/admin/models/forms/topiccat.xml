<?xml version="1.0" encoding="utf-8"?>
<form>

	<fieldset name="topiccat">
		<field name="topiccat" type="text" readonly="true"
			label="COM_ECTOPIC_TOPICCAT_TOPICCAT_LABEL"
			description="COM_ECTOPIC_TOPICCAT_TOPICCAT_DESC" />
        <field name="modified" type="calendar" format="%Y-%m-%d %H:%M:%S" default="now" 
        	label="COM_ECTOPIC_TOPICCAT_MODIFIED_LABEL" 
        	description="COM_ECTOPIC_TOPICCAT_MODIFIED_DESC" />
		<field name="parent" type="hidden" value="" />
		<field name="asset_id" type="hidden" value="" />
		<field name="state" type="topiccatstate" default="1"
			label="COM_ECTOPIC_TOPICCAT_STATE_LABEL"
			description="COM_ECTOPIC_TOPICCAT_STATE_DESC" />
		<field name="title" id="title" type="text" class="inputbox input-xxlarge" required="true"
			label="COM_ECTOPIC_TOPICCAT_TITLE_LABEL"
			description="COM_ECTOPIC_TOPICCAT_TITLE_DESC"
			hint="COM_ECTOPIC_TOPICCAT_TITLE_DESC" />
		<field name="body" id="body" type="editor" buttons="false" class="" required="true"
			label="COM_ECTOPIC_TOPICCAT_BODY_LABEL"
			description="COM_ECTOPICCAT_TOPIC_BODY_DESC"
			hint="COM_ECTOPIC_TOPICCAT_BODY_DESC" filter="JComponentHelper::filterText" />
	</fieldset>

	<fieldset name="columns">
		<field name="options" type="text" />
	</fieldset>

</form>